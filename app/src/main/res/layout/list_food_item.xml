<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="368dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/list_order_confirm_minus_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="37dp"
            android:text="-"
            app:layout_constraintEnd_toStartOf="@+id/list_order_confirm_number_text_view"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_name_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_order_confirm_name_text_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/list_order_confirm_minus_button"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/list_order_confirm_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <Button
            android:id="@+id/list_order_confirm_add_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="37dp"
            android:text="+"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_number_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_order_confirm_number_text_view"
            android:layout_width="61dp"
            android:layout_height="35dp"
            android:layout_marginTop="37dp"
            android:paddingBottom="3dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/list_order_confirm_add_button"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_minus_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_order_confirm_total_text_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:text="Price: $"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_image"
            app:layout_constraintTop_toBottomOf="@+id/list_order_confirm_name_text_view" />

        <TextView
            android:id="@+id/list_food_price_text_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:text="0.00"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/list_order_confirm_minus_button"
            app:layout_constraintStart_toEndOf="@+id/list_order_confirm_total_text_view"
            app:layout_constraintTop_toBottomOf="@+id/list_order_confirm_name_text_view" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>