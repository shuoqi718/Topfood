<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.monash.topfood.account.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/account_edit_name_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:text="Edit Name"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/account_set_address_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_image_view" />

    <ImageView
        android:id="@+id/account_image_view"
        android:layout_width="0dp"
        android:layout_height="124dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="2dp"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toTopOf="@+id/account_edit_name_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/account_set_address_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:text="Set Default Address"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/account_change_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_edit_name_button" />

    <Button
        android:id="@+id/account_change_password_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="44dp"
        android:text="Change Password"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_set_address_button" />

    <Button
        android:id="@+id/account_set_phone_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:text="Change Phone Number"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/account_change_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_set_address_button" />

</android.support.constraint.ConstraintLayout>
